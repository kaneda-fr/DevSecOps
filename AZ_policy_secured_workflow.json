{
    "mode": "All",
    "policyRule": {
        // The policy rule defines conditions and effects for compliance checks
        "if": {
            "allOf": [
                {
                    "field": "type",
                    "equals": "Microsoft.Logic/workflows"
                },
                {
                    "field": "kind",
                    "equals": "Stateful"
                },
                {
                    "anyOf": [
                        {
                            "field": "tags['Environment']",
                            "equals": "SIT"
                        },
                        {
                            "field": "tags['Environment']",
                            "equals": "DEV"
                        }
                    ]
                }
            ]
        },
        "then": {
            // Audit if secureData is not configured properly in SIT or DEV environments
            "if": {
                "anyOf": [
                    {
                        "allOf": [
                            {
                                "field": "Microsoft.Logic/workflows/definition.triggers[*].runtimeConfiguration.secureData.properties",
                                "notContains": "inputs"
                            },
                            {
                                "field": "Microsoft.Logic/workflows/definition.triggers[*].runtimeConfiguration.secureData.properties",
                                "notContains": "outputs"
                            }
                        ]
                    },
                    {
                        "allOf": [
                            {
                                "field": "Microsoft.Logic/workflows/definition.actions[*].runtimeConfiguration.secureData.properties",
                                "notContains": "inputs"
                            },
                            {
                                "field": "Microsoft.Logic/workflows/definition.actions[*].runtimeConfiguration.secureData.properties",
                                "notContains": "outputs"
                            }
                        ]
                    }
                ]
            },
            "then": {
                "effect": "audit"
            }
        }
    },
    "else": {
        "if": {
            "allOf": [
                {
                    "field": "type",
                    "equals": "Microsoft.Logic/workflows"
                },
                {
                    "field": "kind",
                    "equals": "Stateful"
                },
                {
                    "not": {
                        "anyOf": [
                            {
                                "field": "tags['Environment']",
                                "equals": "SIT"
                            },
                            {
                                "field": "tags['Environment']",
                                "equals": "DEV"
                            }
                        ]
                    }
                }
            ]
        },
        "then": {
            // Deny the Logic App if secureData is not configured outside SIT or DEV environments
            "if": {
                "anyOf": [
                    {
                        "allOf": [
                            {
                                "field": "Microsoft.Logic/workflows/definition.triggers[*].runtimeConfiguration.secureData.properties",
                                "notContains": "inputs"
                            },
                            {
                                "field": "Microsoft.Logic/workflows/definition.triggers[*].runtimeConfiguration.secureData.properties",
                                "notContains": "outputs"
                            }
                        ]
                    },
                    {
                        "allOf": [
                            {
                                "field": "Microsoft.Logic/workflows/definition.actions[*].runtimeConfiguration.secureData.properties",
                                "notContains": "inputs"
                            },
                            {
                                "field": "Microsoft.Logic/workflows/definition.actions[*].runtimeConfiguration.secureData.properties",
                                "notContains": "outputs"
                            }
                        ]
                    }
                ]
            },
            "then": {
                "effect": "deny"
            }
        }
    },
    "parameters": {},
    "metadata": {
        "category": "Logic Apps",
        "version": "1.0.0"
    }
}

/* 
    Azure Policy for ensuring secure inputs and outputs in stateful Logic Apps
    - Applies an audit or deny effect based on the 'Environment' tag value
    - Ensures 'secureData' properties for both inputs and outputs are configured

